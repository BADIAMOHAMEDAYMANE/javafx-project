<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox xmlns="http://javafx.com/javafx/21.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.jmc.controller.MainController" alignment="CENTER" spacing="20.0">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Text text="Choose a Quiz Subject">
        <font>
            <Font size="24" />
        </font>
    </Text>

    <Button fx:id="sportsButton" text="Sports" prefWidth="200.0" prefHeight="50.0" onAction="#handleSportsButton" />
    <Button fx:id="politicsButton" text="Politics" prefWidth="200.0" prefHeight="50.0" onAction="#handlePoliticsButton" />
    <Button fx:id="historyButton" text="History" prefWidth="200.0" prefHeight="50.0" onAction="#handleHistoryButton" />
</VBox>